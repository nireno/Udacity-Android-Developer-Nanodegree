<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E9F0"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/portfolio"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="25dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_streamer"
                style="@style/MainMenuButton"
                android:text="@string/streamer"
                android:onClick="underConstructionToast" />

            <Button
                android:id="@+id/btn_scores"
                style="@style/MainMenuButton"
                android:text="@string/scores"
                android:onClick="underConstructionToast" />

            <Button
                android:id="@+id/btn_library"
                style="@style/MainMenuButton"
                android:text="@string/library"
                android:onClick="underConstructionToast" />

            <Button
                android:id="@+id/btn_bigger"
                style="@style/MainMenuButton"
                android:text="@string/bigger"
                android:onClick="underConstructionToast" />

            <Button
                android:id="@+id/btn_reader"
                style="@style/MainMenuButton"
                android:text="@string/reader"
                android:onClick="underConstructionToast" />

            <Button
                android:id="@+id/btn_capstone"
                style="@style/MainMenuButton"
                android:text="@string/capstone"
                android:onClick="underConstructionToast" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_gravity="right" />

</LinearLayout>
